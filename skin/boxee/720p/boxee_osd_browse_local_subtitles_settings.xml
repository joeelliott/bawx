<?xml version="1.0"?>
<window type="dialog">
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
		<control type="group">
			<animation type="WindowOpen">
				<effect type="fade" end="100" time="200"/>
