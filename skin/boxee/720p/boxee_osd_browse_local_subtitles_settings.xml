			<animation type="WindowClose">
				<effect type="fade" end="0" time="200"/>
			</animation>
			<control type="group">
				<posx>166</posx>
				<posy>126</posy>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>948</width>
					<height>412</height>
					<texture srcborder="51" border="34">background/window-bg-transparent.png</texture>
				</control>
				<!-- BROWSE SUBTITLES -->
				<control type="label">
					<posx>68</posx>
					<posy>30</posy>
					<width>844</width>
					<height>20</height>
					<align>center</align>
					<aligny>top</aligny>
					<font>font24b</font>
					<textcolor>whiteheidi</textcolor>
					<label>[B][UPPERCASE]$LOCALIZE[293][/B][/UPPERCASE]</label>
				</control>
				<control type="label" id="412">
					<posx>68</posx>
					<posy>60</posy>
					<width>844</width>
					<height>20</height>
					<align>center</align>
					<aligny>top</aligny>
					<font>font24</font>
					<textcolor>boxeegreenheidi</textcolor>
				</control>
				<control type="list" id="450">
					<posx>32</posx>
					<posy>104</posy>
					<width>882</width>
					<height>300</height>
					<orientation>vertical</orientation>
					<itemlayout height="56">
						<control type="label">
							<posx>440</posx>
							<posy>0</posy>
							<width>854</width>
							<height>56</height>
							<align>center</align>
							<aligny>center</aligny>
							<font>font24</font>
							<label>$INFO[ListItem.Label]</label>
							<textcolor>mediumgreyheidi</textcolor>
						</control>
					</itemlayout>
					<focusedlayout height="56">
