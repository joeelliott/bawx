							<posx>440</posx>
							<posy>0</posy>
							<width>854</width>
							<height>56</height>
							<align>center</align>
							<aligny>center</aligny>
							<font>font24</font>
							<label>$INFO[ListItem.Label]</label>
							<textcolor>whiteheidi</textcolor>
							<scrollonfocus>true</scrollonfocus>
						</control>
					</focusedlayout>
				</control>
			</control>
		</control>
	</controls>
</window>
