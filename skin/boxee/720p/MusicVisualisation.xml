					<textcolor>white</textcolor>
					<label>[B]$INFO[MusicPlayer.Title][/B]</label>
					<aligny>top</aligny>
					<align>left</align>
					<scroll>false</scroll>
					<wrapmultiline>true</wrapmultiline>
				</control>
				<control type="label">
					<posx>119</posx>
					<posy>75</posy>
					<width>1006</width>
					<height>100</height>
					<font>font30</font>
					<textcolor>offwhite</textcolor>
